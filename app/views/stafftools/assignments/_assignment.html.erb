<div class="flex-table classroom-resource">
  <div class="flex-table-item">
    <span class="assignment-icon assignment-icon-individual left">
      <%= octicon('person') %>
    </span>

    <div class="student-information">
      <%= link_to stafftools_assignment_path(assignment.id) do %>
        <strong class="css-truncate-target login"><%= assignment.title %></strong>
      <% end %>
    </div>

    <span class="text-muted css-truncate css-truncate-target">Created <%= local_time_ago(assignment.created_at) %></span>
  </div>
</div>
